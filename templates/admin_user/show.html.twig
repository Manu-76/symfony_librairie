{% extends 'base-admin.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_user_index', {'role': role}) }}" class="btn btn-success"><i class="fa fa-hand-o-left" aria-hidden="true"></i></a>

    <a href="{{ path('admin_user_edit', {'id': user.id, 'role':role}) }}" class="btn btn-warning ms-3"><i class="fa fa-pencil" aria-hidden="true"></i></a>

    {{ include('admin_user/_delete_form.html.twig') }}
{% endblock %}

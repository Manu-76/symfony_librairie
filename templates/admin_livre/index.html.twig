{% extends 'base-admin.html.twig' %}

{% block title %}Livre index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
    <h1>Liste des livres</h1>
    <a href="{{ path('admin_livre_new') }}" class="btn btn-success">Nouveau</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                
                <th>Id</th>
                <th>Image</th>
                <th>Titre</th>
                {# <th>Description</th> #}
                {# <th>ImageSize</th> #}
                <th>Mise Ã  jour</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.id }}</td>
                <td><img src="{{ asset('images/livres/' ~ livre.imageName) }}" alt="{{ livre.titre }}" class="img-list-admin"></td>
                <td>{{ livre.titre }}</td>
                {# <td>{{ livre.description }}</td> #}
                {# <td>{{ livre.imageSize }}</td> #}
                <td>{{ livre.updatedAt ? livre.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_livre_show', {'id': livre.id}) }}" class="btn btn-warning"><i class="fa fa-eye" aria-hidden="true"></i></a>
                    <a href="{{ path('admin_livre_edit', {'id': livre.id}) }}" class="btn btn-warning"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

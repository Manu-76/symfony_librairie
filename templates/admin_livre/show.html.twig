{% extends 'base-admin.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Livre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ livre.description }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ livre.imageName }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ livre.updatedAt ? livre.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_livre_index') }}" class="btn btn-success"><i class="fa fa-hand-o-left" aria-hidden="true"></i></a>

    <a href="{{ path('admin_livre_edit', {'id': livre.id}) }}" class="btn btn-warning ms-3"><i class="fa fa-pencil" aria-hidden="true"></i></a>

    {{ include('admin_livre/_delete_form.html.twig') }}
{% endblock %}
